{% extends 'base.html.twig' %}

{% block title %}Episodes{% endblock %}

{% block body %}
    <h1>Toutes les épisodes : </h1>
    {% for episode in episodes %}
        <div>
            <p>{{ loop.index }} / {{ episode.title }} </p>
        </div>
    {% else %}
        Aucun épisode trouvé.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}